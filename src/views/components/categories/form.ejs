<div class="content">
  <div class="container-fluid">
    <h4 class="page-title">
      <% if (mode === "Create"){ %>
        Tao san pham moi
      <% }; %>
      <% if (mode === "Update"){ %>
        Cap nhap san pham
      <% }; %>
      <% if (mode === "Delete"){ %>
        Ban co dong y xoa san pham <%=category?.name%>
      <% }; %>
    </h4>
    <div class="card">
      <div class="card-body">
        <% if (mode === "Create"){ %>
          <form action="/categories/create" method="post"> 
        <% }; %>
        <% if (mode === "Update"){ %>
          <form action="/categories/update/<%=category?._id%>" method="post"> 
            <div class="form-group hide">
              <label for="code">Mã sản phẩm</label>
              <input 
                name="id"
                type="text"
                value="<%=category?._id%>"
                id="id"
              />
            </div>
        <% }; %>
        <% if (mode === "Delete"){ %>
          <form action="/categories/Delete" method="post"> 
            <div class="form-group hide">
              <input 
                name="id"
                type="text"
                value="<%=category?._id%>"
                id="id"
              />
            </div>
        <% }; %>

        <!-- <div class="form-group has-error has-feedback">
          <label for="errorInput">Error Input</label>
          <input type="text" id="errorInput" value="Error" class="form-control">
          <small id="emailHelp" class="form-text text-muted">Please provide a valid informations.</small>
        </div> -->

          <div class="form-group <%=err?.code && 'has-error has-feedback'%> ">
            <label for="code">Mã sản phẩm</label>
            <input 
              name="code"
              type="text"
              value="<%=category?.code%>"
              class="form-control categoryInput"
              id="code"
              placeholder="nhập mã sản phẩm "
              <% if (mode === 'Delete'){%>
                disabled
              <%}%>
              />
              <small class="form-text text-muted text-danger"><%=err?.code%></small>
            </div>
            <div class="form-group <%=err.name && 'has-error has-feedback'%>">
              <label for="name">tên sản phẩm</label>
              <input 
              name="name"
              type="text"
              value="<%=category?.name%>"
              class="form-control categoryInput"
              id="name"
              placeholder="nhập tên sản phẩm"
              <% if (mode === 'Delete'){%>
                disabled
              <%}%>
              />
              <small class="form-text text-muted text-danger"><%=err?.name%></small>
            </div>
            <div class="form-group <%=err.searchString && 'has-error has-feedback'%>">
              <label for="search">Chuỗi tìm kiếm</label>
              <input 
              name="searchString"
              type="text"
              value="<%=category?.searchString%>"
              class="form-control categoryInput"
              id="searchString"
              placeholder="nhập tên chuỗi"
              <% if (mode === 'Delete'){%>
                disabled
              <%}%>
              />
              <small class="form-text text-muted text-danger"><%=err?.searchString%></small>
            </div>
            <div class="form-group <%=err.image && 'has-error has-feedback'%>">
              <label for="image">Link hình ảnh</label>
              <input 
              name="image"
              type="text"
              value="<%=category?.image%>"
              class="form-control categoryInput"
              id="image"
              placeholder="Nhập link image"
              <% if (mode === 'Delete'){%>
                disabled
              <%}%>
            />
            <small class="form-text text-muted text-danger"><%=err?.image%></small>
          </div>
          <div class="card-action">
            <% if (mode === "Create"){ %>
              <button class="btn btn-success" type="submit">Tao</button>
            <% }; %>
            <% if (mode === "Update"){ %>
              <button class="btn btn-success" type="submit">Sua</button>
            <% }; %>
            <% if (mode === "Delete"){ %>
              <button class="btn btn-danger" type="submit">Xoa</button>
            <% }; %>
            
            <button class="btn btn-danger">Tro ve</button>
          </div>
        </form>
      </div>
  </div>
</div>