<div class="content">
  <div class="container-fluid">
    <div class="flex items-center justify-content-between mb-2">
      <h4 class="page-title">Danh sách sản phẩm</h4>
      <a href="/categories/create" class="btn btn-default">Tạo sản phẩm</a>
    </div>
    <% if (categories && categories.length>0) { %>
    <div class="card">
      <div class="card-body">
        <table class="table table-head-bg-success">
          <thead>
            <tr>
              <th scope="col">STT</th>
              <th scope="col">image</th>
              <th scope="col">code</th>
              <th scope="col">name</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% categories.forEach(function(category, index){ %>
              <tr>
                <td><%=index%></td>
                <td>
                  <img src="<%=category.image%>" alt="image" class="category-label">
                </td>
                <td><%=category.code%></td>
                <td><%=category.name%></td>
                <td>
                  <a class="btn btn-primary btn-sm" href="/categories/update/<%=category._id%>">Sua</a>
                  <a class="btn btn-danger btn-sm" href="/categories/delete/<%=category._id%>">Xoa</a>
                </td>
              </tr>
              <% }); %>
          </tbody>
        </table>
      </div>
    </div>
    <% }else{%>
      <h5>hiện không có sản phẩm</h5>
  <% } %>
  </div>
</div>