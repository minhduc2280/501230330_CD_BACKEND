<div class="content">
  <div class="container-fluid">
    <h4 class="page-title">
      <% if (mode === "Create"){ %>
        Giả lập tạo sản hóa đơn
      <% }; %>
    </h4>
    <div class="card">
      <div class="card-body">
          <form action="/products/create" method="post"> 
          <div class="form-group <%=err?.discount && 'has-error has-feedback'%> ">
            <label for="discount">Mức giảm giá</label>
            <input 
              name="discount"
              type="number"
              value="<%=order?.discount%>"
              class="form-control categoryInput"
              id="discount"
              placeholder="nhập mã sản phẩm "
              <% if (mode === 'Delete'){%>
                disabled
              <%}%>
              />
              <small class="form-text text-muted text-danger"><%=err?.discount%></small>
            </div>
          <div class="form-group ">
            <label for="code">Danh sách sản phẩm</label>
              <div id="listProduct">
                <div class="flex gap-2 orderItemGroup" >
                  <div class="btn btn-success itemButton" onclick="addNewOrderItem()"><i class="la la-plus"></i></div>
                    <select class="form-control form-control max-w-10 mb-4px itemSelect" name="itemSelect">
                      <option value="">chọn sản phẩm</option>
                      <% products.forEach(function(product, index){ %>
                          <option value="<%=product._id%>" data-colors="<%=product.colors%>" data-sizes="<%=product.sizes%>" data-price="<%=product.price%>"><%= product.name %></option>
                      <% }) %>
                    </select>
                    <input 
                      name="quantity"
                      type="number"
                      value="<%=order?.quantity%>"
                      class="form-control categoryInput "
                      id="quantity"
                      placeholder="nhập số lượng "
                      <% if (mode === 'Delete'){%>
                        disabled
                      <%}%>
                    />
                    <input 
                      name="itemPrice"
                      type="number"
                      value="<%=order?.discount%>"
                      class="form-control categoryInput itemPrice"
                      <% if (mode === 'Delete'){%>
                        disabled
                      <%}%>
                      disabled
                    />
                    <select class="form-control form-control max-w-10 mb-4px itemColor" name="itemColor">
                      
                    </select>
                    <select class="form-control form-control max-w-10 mb-4px itemSize" name="itemSize">
                      
                    </select>
                    <div class="btn btn-danger itemButton deleteOrderItem"><i class="la la-trash"></i></div>
                </div>
              </div>
          </div>
          <p>Địa chỉ giao hàng</p>
          <div class="form-group ">
            <label for="billingName">Tên khách hàng</label>
            <input 
              name="billingName"
              type="text"
              class="form-control categoryInput"
              id="billingName"
              placeholder="Nhập tên khách hàng "
              <% if (mode === 'Delete'){%>
                disabled
              <%}%>
            />
          </div>
          <div class="form-group ">
            <label for="billingEmail">Email</label>
            <input 
              name="billingEmail"
              type="email"
              class="form-control categoryInput"
              id="billingEmail"
              placeholder="Nhập email "
              <% if (mode === 'Delete'){%>
                disabled
              <%}%>
            />
          </div>
          <div class="form-group ">
            <label for="billingPhoneNumber">SĐT</label>
            <input 
              name="billingPhoneNumber"
              type="number"
              class="form-control categoryInput"
              id="billingPhoneNumber"
              placeholder="Nhập số điện thoại "
              <% if (mode === 'Delete'){%>
                disabled
              <%}%>
            />
          </div>
          <div class="form-group ">
            <label for="billingAddress">Địa chỉ</label>
            <input 
              name="billingAddress"
              type="text"
              class="form-control categoryInput"
              id="billingAddress"
              placeholder="Nhập địa chỉ nhà "
              <% if (mode === 'Delete'){%>
                disabled
              <%}%>
            />
          </div>
          <div class="form-group ">
            <label for="billingDistrict">Quận/Huyện</label>
            <input 
              name="billingDistrict"
              type="text"
              class="form-control categoryInput"
              id="billingDistrict"
              placeholder="Nhập quận/huyện "
              <% if (mode === 'Delete'){%>
                disabled
              <%}%>
            />
          </div>
          <div class="form-group ">
            <label for="billingCity">Thành phố</label>
            <input 
              name="billingCity"
              type="text"
              class="form-control categoryInput"
              id="billingCity"
              placeholder="Nhập thành phố "
              <% if (mode === 'Delete'){%>
                disabled
              <%}%>
            />
          </div>

          <div class="card-action">
            <% if (mode === "Create"){ %>
              <button class="btn btn-success" type="submit">Tao</button>
            <% }; %>
            <% if (mode === "Update"){ %>
              <button class="btn btn-success" type="submit">Sua</button>
            <% }; %>
            <% if (mode === "Delete"){ %>
              <button class="btn btn-danger" type="submit">Xoa</button>
            <% }; %>
            
            <a href="/products" class="btn btn-primary">Trở về</a>
          </div>
        </form>
      </div>
  </div>
</div>

